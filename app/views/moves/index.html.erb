<h1>Moves</h1>

<!-- Searchign Form -->
<%= form_with(url: moves_path, method: :get, local: true, class: "form-inline") do |form| %>
  <%= form.label :search, "Search by name" %>
  <%= form.text_field :search, placeholder: "Enter move name", value: params[:search] %>

  <%= form.label :move_type, "Filter by type" %>
  <%= form.select :move_type, options_for_select(Move.distinct.pluck(:move_type)), include_blank: true, selected: params[:move_type] %>

  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>

<!-- Moves List -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Power</th>
      <th>PP</th>
      <th>Accuracy</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= link_to move.name, move_path(move) %></td>
        <td><%= move.move_type %></td>
        <td><%= move.power %></td>
        <td><%= move.pp %></td>
        <td><%= move.accuracy %></td>
        <td><%= move.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @moves %>
